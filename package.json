{
  "name": "Spotilist",
  "version": "0.0.0",
  "description": "Playlist maker based in spotify api",
  "main": "index.js",
  "repository": "git@github.com:mxdsxn/spotify-playlist.git",
  "author": "Madson Santana <madson.santan96a@gmail.com>",
  "license": "The unlicense",
  "private": false,
  "dependencies": {
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.15.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "start:docker": "yarn && yarn start",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start:build": "node dist/index.js",
    "start:build:docker": "yarn && yarn build && yarn start:build",
    "compose:up": "sudo make up",
    "compose:down": "sudo make down",
    "compose:logs": "sudo make logs",
    "compose:restart": "yarn compose:down && yarn compose:up"
  }
}
